<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stephanie.gutierreza3.MainActivity">

    <TextView
        android:id="@+id/textViewChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/textViewChoose"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="58dp" />

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:columnCount="5"
        android:rowCount="2"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnGo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnGo2"
            android:layout_alignStart="@+id/btnGo2"
            android:layout_centerVertical="true"
            android:text="@string/btnGo1" />

        <Button
            android:id="@+id/btnGo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnGo1"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_toEndOf="@+id/textViewGoogle"
            android:layout_toRightOf="@+id/textViewGoogle"
            android:text="@string/btnGo2" />

        <TextView
            android:id="@+id/textViewGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnGo1"
            android:layout_alignBottom="@+id/btnGo1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="77dp"
            android:layout_marginStart="77dp"
            android:text="@string/textViewMesa"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="310dp"
            tools:layout_editor_absoluteY="279dp" />

        <TextView
            android:id="@+id/textViewMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnGo2"
            android:layout_alignBottom="@+id/btnGo2"
            android:layout_alignEnd="@+id/textViewGoogle"
            android:layout_alignRight="@+id/textViewGoogle"
            android:text="@string/textViewGoogle"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="279dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
